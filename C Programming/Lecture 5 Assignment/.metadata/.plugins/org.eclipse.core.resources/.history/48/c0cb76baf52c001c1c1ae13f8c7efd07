#include <stdio.h>

unsigned int PowOfNumber(unsigned int base , unsigned int power);

unsigned int PowOfNumber(unsigned int base , unsigned int power)
{
	if (base == 0) return 1;
	return base*PowOfNumber(base,power-1);

}

int main(void) {
	unsigned int base , exp;
	printf("Enter base number : ");
	fflush(stdout);
	scanf("%d",&base);
	printf("Enter power number(positive integer ): ");
	fflush(stdout);
	scanf("%d",&exp);

	printf("%d ^ %d = %d",base ,exp,PowOfNumber(num,base));
}

#include <stdio.h>
#include <stdlib.h>

unsigned int Recursive_Factorial(unsigned int num);
unsigned int Recursive_Factorial(unsigned int num)
{
	//base condition
	if(num == 1 ) return 1 ;
	//recursive condition
	return Recursive_Factorial(num-1);
}


int main(void) {
	unsigned int num;
	printf("Enter a positive integer : ");
	fflush(stdout);
	scanf("%d",&num);

}
